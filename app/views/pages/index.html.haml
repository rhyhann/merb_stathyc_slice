- for page in @pages
  %h3= page.name
  %p= page.description
  %p= page.content
  - throw_content :for_cud do
    = catch_content :for_cud
    %h3= page.name
    %ul
      %li= link_to 'Show', url(:page, page)
      %li= link_to 'Edit', url(:edit_page,  page)
      %li= link_to 'Delete', url(:delete_page, page)
- throw_content :for_cud do
  = catch_content :for_cud
  %h3
    %strong= link_to 'New', url(:new_page)
